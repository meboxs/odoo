<?xml version="1.0" encoding="utf-8"?>
<odoo>
           <record id="pos_config_view_form" model="ir.ui.view">
            <field name="name">pos.config.form.view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet"  position="inside">


                        <h2>Refund Point of Sale</h2>
                        <div class="row mt16 o_settings_container" name="module_pos_refund_multiple">

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="col-12 col-lg-6 o_setting_box" id="module_pos_refund_multiple_setting"
                                     title="Orders Point of Sale Multiple refunds">
                                    <div class="o_setting_left_pane">
                                        <field name="module_pos_refund_multiple"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_pos_refund_multiple" string="Multiple refunds"/>
                                        <div class="text-muted">
                                            Turn off multiple refunds
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-lg-6 o_setting_box" id="module_pos_refund_lock_date"
                                     title="Orders Point of Sale Multiple refunds">
                                    <div class="o_setting_left_pane">
                                        <field name="module_pos_refund_lock_date"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_pos_refund_lock_date" string="Turn off retrospective refunds."/>
                                       <div class="text-muted">
                                            The number of days in which a refund can be made retrospectively.
                                        </div>
                                        <div class="content-group"
                                             attrs="{'invisible': [('module_pos_refund_lock_date', '=', False)]}">
                                            <div class="mt16" name="module_pos_refund_lock_date_number"
                                                 string="refund date after">
                                                <field name="module_pos_refund_lock_date_number" default="1" type="number"/>
                                                / Day
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>



                </xpath>
            </field>
        </record>

